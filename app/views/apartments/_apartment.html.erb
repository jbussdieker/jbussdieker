<tr>
  <% if current_user %>
    <td>
    <% unless apartment.viewed?(current_user) %>
      <span class="label label-success">NEW</span>
    <% end %>
    </td>
  <% end %>
  <td><%= link_to apartment.title, apartment %></td>
  <td><%= apartment.price %></td>
  <td><%= time_ago_in_words(apartment.posted_at || Time.now) %> ago</td>
  <td>
    <%= link_to 'Source', apartment.url, class: 'btn btn-mini btn-default' %>
  </td>
</tr>
